{
  "version": 2,
  "builds": [
    {
      "src": "task-manager/package.json",
      "use": "@vercel/static-build",
      "config": { "outputDirectory": "dist/task-manager/browser" }
    },
    {
      "src": "backend/index.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "backend/index.js"
    },
    {
      "src": "/(.*)",
      "dest": "task-manager/dist/task-manager/browser/$1"
    }
  ]
}
