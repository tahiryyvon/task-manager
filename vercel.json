{
  "version": 2,
  "builds": [
    {
      "src": "task-manager",
      "use": "@vercel/static-build",
      "config": { "outputDirectory": "dist/task-manager/browser" }
    },
    {
      "src": "backend/index.js",
      "use": "@vercel/node"
    }
  ],
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/backend/index.js"
    },
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ]
}
